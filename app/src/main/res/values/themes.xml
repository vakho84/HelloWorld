<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelloWorld" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_132</item>
        <item name="colorPrimaryVariant">@color/green_132</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_132</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HelloWorld.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HelloWorld.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.HelloWorld.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HelloWorld.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.HelloWorld.HeadlineLink" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?android:textColorLink</item>
    </style>

    <style name="TextAppearance.HelloWorld.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/green_132</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">72dp</item>
    </style>

    <style name="TextAppearance.HelloWorld.weatherTemperatureRow" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/green_132</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">@dimen/fragment_weather_temperature_row_height</item>
    </style>

    <style name="TextAppearance.HelloWorld.weatherRows" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/green_132</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">@dimen/fragment_weather_row_height</item>
    </style>

    <style name="TextAppearance.HelloWorld.weatherRowsResult" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/green_132</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">@dimen/fragment_weather_row_height</item>
    </style>

    <style name="TextAppearance.HelloWorld.flagsRows" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/green_132</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">@dimen/fragment_flags_row_height</item>
    </style>

    <style name="TextAppearance.HelloWorld.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="TextAppearance.HelloWorld.ButtonTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/green_132</item>
    </style>

</resources>